{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <h1>Comment index</h1>

    <table class="array">
        <thead>
            <tr>
                <th>identifiants</th>
                <th>Message</th>
                <th>date de création</th>
                <th>date de modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.message }}</td>
                <td>{{ comment.creationDate ? comment.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ comment.modificationDate ? comment.modificationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_comment_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">topic non trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comment_new') }}">Créer un nouveau topic</a>
{% endblock %}
