{% extends 'base.html.twig' %}

{% block title %}Page de Commentaires{% endblock %}

{% block body %}
   <link rel="stylesheet" href="styles.css">
    <h1>Commentaires</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ comment.message }}</td>
            </tr>
            <tr>
                <th>date de création</th>
                <td>{{ comment.creationDate ? comment.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>date de modification</th>
                <td>{{ comment.modificationDate ? comment.modificationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">retour page précédente</a>

    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">modifier</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
